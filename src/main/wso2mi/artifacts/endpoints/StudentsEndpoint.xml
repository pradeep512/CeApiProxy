<?xml version="1.0" encoding="UTF-8"?>
<endpoint name="StudentsEndpoint" xmlns="http://ws.apache.org/ns/synapse">
    <http method="get"   uri-template="https://api.ce.pdn.ac.lk/people/v1/students/">
        <suspendOnFailure>
            <initialDuration>-1</initialDuration>
            <progressionFactor>1</progressionFactor>
        </suspendOnFailure>
        <markForSuspension>
            <retriesBeforeSuspension>0</retriesBeforeSuspension>
        </markForSuspension>
    </http>
</endpoint>
